	<!-- SQL : INSERT -->
	<insert id="addFund"	parameterType="fund" >
	 	INSERT
		 INTO fund VALUES ( seq_fund_fund_no.nextval,'${fundTitle}','${fundImage}' ,'${fundCenter}' ,'${fundPhone}' ,'${fundTerm}' , 0,0,'0',0,'${fundContent}',SYSDATE,0 )
												
	 </insert>
	 
	 <!-- SQL : SELECT ONE -->
	<select id="getFund"	parameterType="int"	resultMap="fundSelectMap">
		select fund_no,fund_Title,fund_image,fund_center,fund_term,fund_Content,fund_Raising,fund_personnel 
		from  fund
		where fund_no=#{value}
		
	 </select>
	 
	 <select id="getFundList"	resultMap="fundSelectMap">
		select fund_no,fund_Title,fund_image,fund_term,fund_Raising 
		from  fund
		
	 </select>
	 
